<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.exempleprojet.controllers.VeterinarianListController"
      spacing="20"
      style="-fx-background-color: #f0f0f0;">

    <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);">
        <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
            <ImageView fitHeight="40" fitWidth="173.0" preserveRatio="true">
                <image>
                    <Image url="@../images/logo.svg.png" />
                </image>
            </ImageView>
            <Button onAction="#goToHome" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="ACCUEIL" />
            <Button onAction="#goToOwnerList" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="PROPRIÉTAIRES" />
            <Button onAction="#goToVeterinarianList" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="VÉTÉRINAIRES" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;" text="RENDEZ-VOUS" />
        </HBox>
    </HBox>
    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Label text="Liste des Vétérinaires"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="20"/>
            </padding>
            <TextField fx:id="searchField"
                      promptText="Rechercher un vétérinaire..."
                      style="-fx-pref-width: 300; -fx-padding: 8;"/>
            <Button text="Rechercher"
                    onAction="#searchVeterinarians"
                    style="-fx-background-color: #06073b; -fx-text-fill: white; -fx-padding: 8 15;"/>
            <Button text="Nouveau Vétérinaire"
                    onAction="#goToNewVeterinarian"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15;"/>
        </HBox>

        <TableView fx:id="veterinarianTable"
                  style="-fx-pref-height: 400; -fx-background-color: transparent;">
            <columns>
                <TableColumn fx:id="nomColumn"
                           text="Nom"
                           prefWidth="200"
                           style="-fx-alignment: CENTER_LEFT;"/>
                <TableColumn fx:id="specialiteColumn"
                           text="Spécialité"
                           prefWidth="200"
                           style="-fx-alignment: CENTER_LEFT;"/>
                <TableColumn fx:id="experienceColumn"
                           text="Années d'expérience"
                           prefWidth="150"
                           style="-fx-alignment: CENTER;"/>
            </columns>
            <placeholder>
                <Label text="Aucun vétérinaire trouvé"
                       style="-fx-text-fill: #666666; -fx-font-size: 14px;"/>
            </placeholder>
        </TableView>
    </VBox>
</VBox>