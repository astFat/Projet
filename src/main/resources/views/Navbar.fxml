<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="navbar" spacing="0" styleClass="navbar" stylesheets="@../styles/nav.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="com.vetcare360.controllers.NavbarController">
    <Label styleClass="navbar-logo" text="🐾 " />
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images/logo.svg.png" />
      </image>
   </ImageView>
    <Button fx:id="homeBtn" onAction="#goHome" styleClass="navbar-button" text="HOME" />
    <Button fx:id="findOwnersBtn" onAction="#goFindOwners" styleClass="navbar-button" text="FIND OWNERS" />
    <Button fx:id="vetsBtn" onAction="#goVets" styleClass="navbar-button" text="VETERINARIANS" />
    <Button fx:id="appointmentsBtn" onAction="#goAppointments" styleClass="navbar-button" text="APPOINTMENTS" />
</HBox>
